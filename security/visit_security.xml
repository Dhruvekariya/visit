<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Create a new category for Visit Management -->
    <record id="module_category_visit" model="ir.module.category">
        <field name="name">Visit Management</field>
        <field name="description">Helps you manage customer visits and related orders.</field>
        <field name="sequence">100</field>
    </record>
    
    <!-- Visit User Group - Can only see own visits -->
    <record id="group_visit_user" model="res.groups">
        <field name="name">User: Own Visits Only</field>
        <field name="category_id" ref="module_category_visit"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>
    
    <!-- Visit All Group - Can see all visits -->
    <record id="group_visit_all" model="res.groups">
        <field name="name">User: All Visits</field>
        <field name="category_id" ref="module_category_visit"/>
        <field name="implied_ids" eval="[(4, ref('group_visit_user'))]"/>
    </record>
    
    <!-- Visit Manager Group - Full access -->
    <record id="group_visit_manager" model="res.groups">
        <field name="name">Administrator</field>
        <field name="category_id" ref="module_category_visit"/>
        <field name="implied_ids" eval="[(4, ref('group_visit_all'))]"/>
        <field name="users" eval="[(4, ref('base.user_admin'))]"/>
    </record>
    
    <!-- Settings Group -->
    <record id="group_auto_done_visit" model="res.groups">
        <field name="name">Lock Submitted Visits</field>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>
</odoo>